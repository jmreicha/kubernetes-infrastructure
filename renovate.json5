{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        ":disableDependencyDashboard"
    ],
    "argocd": {
        "fileMatch": [
            "infrastructure/.+\\.yaml$"
        ]
    },
    "kubernetes": {
        "fileMatch": [
            "manifest/.+\\.yaml$"
        ]
    },
    "labels": [
        "dependencies"
    ],
    "packageRules": [
        {
            "automerge": true,
            "automergeSchedule": [
                "before 3:00am"
            ],
            "automergeType": "branch",
            "groupName": "auto-update",
            "ignoreTests": true,
            "managers": [
                "argocd"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ]
        }
    ],
    "pre-commit": {
        "enabled": true
    },
    "prConcurrentLimit": 5,
    "recreateClosed": true,
    "schedule": [
        "before 3:00am"
    ],
    "vulnerabilityAlerts": {
        "labels": [
            "security"
        ]
    }
}
